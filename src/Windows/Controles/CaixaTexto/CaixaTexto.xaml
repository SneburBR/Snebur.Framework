<zs:BaseCaixaTexto x:Class="Zyoncore.Windows.CaixaTexto"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:zs="clr-namespace:Zyoncore.Windows"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"  DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <StackPanel>
        <TextBlock Text="{Binding Rotulo}"></TextBlock>
        <TextBox MinWidth="100"></TextBox>
    </StackPanel>
</zs:BaseCaixaTexto>
