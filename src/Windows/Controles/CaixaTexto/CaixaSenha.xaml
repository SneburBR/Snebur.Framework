<sn:BaseCaixaTexto x:Class="Snebur.Windows.CaixaSenha"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:sn="clr-namespace:Snebur.Windows"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <StackPanel>
        <TextBlock Text="{Binding Rotulo }"></TextBlock>
        <PasswordBox   MinWidth="100"></PasswordBox>
    </StackPanel>
</sn:BaseCaixaTexto>
